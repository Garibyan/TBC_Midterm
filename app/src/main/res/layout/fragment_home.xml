<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".view.tabs.HomeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRandomCocktail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Random Cocktail"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRandomTenCocktail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Random 10 Cocktails"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRandomCocktail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtPopularCocktails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Popular Cocktails"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtRandomTenCocktail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtLatestCocktails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Latest Cocktails"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPopularCocktails" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtSearchByCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Search by category"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtLatestCocktails" />


</androidx.constraintlayout.widget.ConstraintLayout>